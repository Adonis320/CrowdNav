[env]
time_limit = 25
time_step = 0.25
val_size = 100
test_size = 500
randomize_attributes = false
xmin = -4.5
xmax = 4.5
ymin = -4.5
ymax = 4.5

obstacles:
  # === Outer walls (with centered doors) ===
  # Left wall
  - {xmin: -4.5, xmax: -4.25, ymin: -4.5, ymax: 4.5}

  # Right wall
  - {xmin:  4.25, xmax:  4.5,  ymin: -4.5, ymax: 4.5}

  # Bottom wall
  - {xmin: -4.5,  xmax: 4.5, ymin: -4.5, ymax: -4.25}

  # Top wall
  - {xmin: -4.5,  xmax: 4.5, ymin:  4.25, ymax:  4.5}


[reward]
success_reward = 100
collision_penalty = -0.25
discomfort_dist = 0.5
discomfort_penalty_factor = 0.5


[sim]
train_val_sim = circle_crossing
test_sim = circle_crossing
square_width = 10
circle_radius = 4
human_num = 5


[humans]
visible = true
policy = orca
radius = 0.3
v_pref = 1
sensor = coordinates


[robot]
visible = false
policy = none
radius = 0.3
v_pref = 1
sensor = coordinates
